generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

// Better Auth tables
model User {
  id            String    @id
  name          String
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  // Custom fields for this app
  role          String    @default("EMPLOYEE") // EMPLOYEE or ADMIN
  encryptedPw   String?   // Encrypted password for admin display

  sessions     Session[]
  accounts     Account[]
  calls        Call[]
  appointments Appointment[]
  feedback     Feedback[]

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification")
}

model Industry {
  id    String @id @default(cuid())
  name  String @unique
  icon  String @default("building")
  leads Lead[]
}

model Service {
  id    String @id @default(cuid())
  name  String @unique
  icon  String @default("briefcase")
  leads Lead[]
}

model Lead {
  id          String   @id @default(cuid())
  companyName String
  phone       String
  industryId  String?
  industry    Industry? @relation(fields: [industryId], references: [id])
  serviceId   String?
  service     Service?  @relation(fields: [serviceId], references: [id])
  // Status: OPEN, NO_ANSWER, NO_INTEREST, BOOKED, CONVERTED
  status      String   @default("OPEN")
  importBatchId String?
  importBatch   ImportBatch? @relation(fields: [importBatchId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  calls        Call[]
  appointments Appointment[]

  @@index([status])
  @@index([industryId])
  @@index([serviceId])
  @@index([importBatchId])
}

model Call {
  id        String   @id @default(cuid())
  leadId    String
  lead      Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  // Outcome: NO_ANSWER, NO_INTEREST, BOOKED
  outcome   String
  createdAt DateTime @default(now())

  @@index([userId, createdAt])
  @@index([createdAt])
  @@index([leadId])
}

model Appointment {
  id           String   @id @default(cuid())
  leadId       String
  lead         Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  calcomEventId String?
  scheduledAt  DateTime?
  // Status: BOOKED, CONVERTED, CANCELLED
  status       String   @default("BOOKED")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId, status])
  @@index([status])
  @@index([leadId])
  @@index([scheduledAt])
}

model ImportBatch {
  id        String   @id @default(cuid())
  filename  String
  rowCount  Int
  createdAt DateTime @default(now())
  leads     Lead[]
}

model Feedback {
  id          String   @id @default(cuid())
  type        String   // "feedback" or "bug"
  subject     String
  description String
  status      String   @default("OPEN") // OPEN, IN_PROGRESS, RESOLVED, CLOSED
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([status])
}
